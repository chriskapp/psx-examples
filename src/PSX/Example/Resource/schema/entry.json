{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://example.phpsx.org#",
    "title": "entry",
    "description": "Represents an internet population entry",
    "type": "object",
    "definitions": {
        "population": {
            "title": "population",
            "type": "object",
            "properties": {
                "complete": {
                    "type": "integer",
                    "description": "Complete number of population"
                },
                "users": {
                    "type": "integer",
                    "description": "Number of internet users"
                },
                "world": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 100,
                    "description": "Percentage users of the world"
                }
            }
        }
    },
    "properties": {
        "id": {
            "type": "integer",
            "description": "Unique id for each entry"
        },
        "place": {
            "type": "integer",
            "description": "Position in the top list"
        },
        "region": {
            "type": "string",
            "pattern": "[A-z]+",
            "description": "Name of the region"
        },
        "population": {
            "$ref": "#/definitions/population"
        },
        "datetime": {
            "type": "string",
            "format": "date-time",
            "description": "Date when the entry was created"
        }
    }
}
